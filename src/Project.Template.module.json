{
    "namespace": "Project.Template",
    "items": {
        "includes": [
            {
                "name": "Project.Template",
                "path": "/sitecore/templates",
                "allowedPushOperations": "createUpdateAndDelete",
                "scope": "itemAndDescendants",
                "rules": [
                    {
                        "path": "/Branches/Project",
                        "allowedPushOperations": "createUpdateAndDelete",
                        "scope": "itemAndDescendants"
                    },
                    {
                        "path": "/Branches",
                        "allowedPushOperations": "createUpdateAndDelete",
                        "scope": "SingleItem"
                    },
                    {
                        "path": "/Project",
                        "allowedPushOperations": "createUpdateAndDelete",
                        "scope": "itemAndDescendants"
                    },
                    {
                        "path": "*",
                        "scope": "ignored"
                    }
                ]
            }
        ]
    }
}