<?xml version="1.0" encoding="utf-8"?>
<configuration xmlns:xdt="
http://schemas.microsoft.com/XML-Document-Transform">

  <location path="sitecore">
    <system.webServer>
      <httpProtocol>
        <customHeaders>
          <!--DO NOT USE THIS CONTENT SECURITY POLICY EXAMPLE IN YOUR SOLUTION-->
